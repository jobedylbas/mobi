<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
  <h1>Dashboard</h1>
<div id="control-buttons" class="btn-toolbar justify-content-between" role="toolbar">
    <div class="col btn-group" role="group">
      <button type="button" id="downbtn" class="btn btn-dark btn-sm" data-toggle="modal" data-target="#downloadsheet"><span class="oi oi-data-transfer-download"></span></button>
      <button type="button" class="btn btn-dark btn-sm" data-toggle="modal" data-target="#configuration-sheet" style="border-radius: 0px 3px 3px 0px"><span class="oi oi-cog"></span></button>
    </div>  
    <!-- Download Modal -->
    <div class="modal" id="downloadsheet" tabindex="-1" role="dialog" aria-labelledby="downloadsheet" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="downloadmodaltitle">Download</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Select the plots that you wanna download:</p>
            <div class="modal-form">
              <form>
                <ul id="downlist" class="list-group">
                </ul>
                <div id="format" class="mt-3">
                  <p>Format:</p>
                  <button id="jsontype" type="button" class="btn btn-dark multchoice-btn" value="json">JSON</button>
                  <button id="csvtype" type="button" class="btn btn-dark multchoice-btn" value="csv">CSV</button>
                </div>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button id="export" type="button" class="btn btn-dark">Export</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Configuration Modal -->
    <div class="modal" id="configuration-sheet" tabindex="-1" role="dialog" aria-labelledby="configuration-sheet" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="configmodaltitle">Configuration</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
              <label for="exampleFormControlSelect1">Example select</label>
              <select class="form-control" id="exampleFormControlSelect1">
                <option value="bar">Bar</option>
                <option value="scatter">Scatter</option>
                <option value="line">Line</option>
                <option value="bar//:line">Bar with lines</option>
                <option value="bar//:scatter">Bar with symbols</option>
              </select>
            </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-dark">Confirm</button>
          </div>
        </div>
      </div>>
    </div>
    <div id="granularityId" class="col btn-group" role="group">
      <button id="ten" type="button" class="btn btn-dark btn-sm time active" value="11">10</button>
      <button id="thirty" type="button" class="btn btn-dark btn-sm time" value="31">30</button>
      <button id="sixty" type="button" class="btn btn-dark btn-sm time" value="61">60</button>
      <button id="htwenty" type="button" class="btn btn-dark btn-sm time" value="121">120</button>
      <button id="ever" type="button" class="btn btn-dark brn-sm time" value="0">All time</button>
    </div>
    <div id="chartTypeDiv" class="col btn-group" role="group">
      <button id="area" type="button" class="btn btn-sm btn-dark multchoice-btn" value="area">Area</button>
      <button id="bar" type="button" class="btn btn-sm btn-dark multchoice-btn" value="bar">Bar</button>
      <button id="line" type="button" class="btn btn-sm btn-dark multchoice-btn active" value="scatter">Line</button>
    </div>
    <div class="col btn-group" role="group">
      <button type="button" class="btn btn-dark btn-sm" data-toggle="modal" data-target="#delete-sheet"><span class="oi oi-x" ></span></button>
      <button type="button" class="btn btn-dark btn-sm"><span class="oi oi-media-pause"></span></button>
      <button type="button" class="btn btn-dark btn-sm"><span class="oi oi-media-play"></span></button>
    </div>
    <div class="modal" id="delete-sheet" tabindex="-1" role="dialog" aria-labelledby="delete-sheet" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="delmodaltitle">Delete</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Select the plots that you wanna delete:</p>
            <div class="modal-form">
              <form>
                <ul class="list-group">
                    <li class="list-group-item">
                      <label class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">plot1</span>
                      </label>
                    </li>
                </ul>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-dark">Confirm</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>